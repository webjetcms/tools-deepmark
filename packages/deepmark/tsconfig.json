{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"composite": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"lib": ["ESNext"],
		"noEmit": false,
		"outDir": "./dist/@types",
		"rootDir": "src",
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Node"
	},
	"include": ["src/**/*.*js", "src/**/*.ts"]
}
